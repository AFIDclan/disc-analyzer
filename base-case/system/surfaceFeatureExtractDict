FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeatureExtractDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

disc.stl
{
    extractionMethod    extractFromSurface;

    extractFromSurfaceCoeffs
    {
        includedAngle   150;  // Angle for feature edge detection
    }

    writeObj            yes;  // Write feature edges as .obj for inspection
    writeFeatures       yes;  // Write eMesh file for snappyHexMesh
}

